<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:style/Theme.Light"></style>
    
    <style name="ItalicText">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ActivityTitle">
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="MenuBar">
        <item name="android:background">@color/blue_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MenuBarButton"></style>

    <style name="MainButton">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@color/grey_light</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="MainButtonTitle">
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="MainButtonDescription">
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="ExpressionRow">
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ExpressionRow_source">
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="ExpressionRow_target">
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="ListTitle">
        <item name="android:background">@color/blue_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ApplicationTag">
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ApplicationFormTag">
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="CurrentQuestionText">
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="IdiomDescriptionItem">
        <!-- <item name="android:background">@color/grey_light</item>-->
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="IdiomDescriptionItem_source">
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="IdiomDescriptionItem_target">
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="IdiomDescriptionItem_description">
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="IdiomDescriptionItem_examples">
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="TextField">
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style name="ApplicationButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/blue_dark</item>
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="QuizResponseButton">
        <item name="android:background">@drawable/response_row</item>
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="QuizResultsRow">
        <item name="android:background">@drawable/result_row</item>        
        <item name="android:padding">10dp</item>
    </style>

    <style name="QuizResultsRow_text_asked">
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="QuizResultsRow_text_answered">
        <item name="android:layout_gravity">center_vertical</item>        
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>