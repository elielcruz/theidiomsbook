<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:layout_gravity="center_vertical"    android:orientation="vertical" >    <TextView        android:id="@+id/quiz_result_row_text_asked"        style="@style/QuizResultsRow_text_asked"        android:layout_width="match_parent"        android:layout_height="wrap_content" />    <LinearLayout        android:id="@+id/quiz_result_row"        style="@style/QuizResultsRow"        android:layout_width="match_parent"        android:layout_height="wrap_content" >        <TextView            android:id="@+id/row_result_id"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:visibility="gone" />        <TextView            android:id="@+id/quiz_result_row_icon_correct"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:background="@drawable/ic_navigation_accept"            android:visibility="gone" />        <TextView            android:id="@+id/quiz_result_row_icon_incorrect"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:background="@drawable/ic_navigation_cancel"            android:visibility="gone" />        <TextView            android:id="@+id/quiz_result_row_text_answered"            style="@style/QuizResultsRow_text_answered"            android:layout_width="match_parent"            android:layout_height="wrap_content" />    </LinearLayout></LinearLayout>